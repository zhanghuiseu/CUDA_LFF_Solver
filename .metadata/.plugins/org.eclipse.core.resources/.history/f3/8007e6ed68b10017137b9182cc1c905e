#ifndef CONSTRAINTPARAMETER_CUH_
#define CONSTRAINTPARAMETER_CUH_

#include <string>
#include <vector>
#include <iostream>

#include "ResultTest.h"
using namespace std;

/*
 * 这个类是经过约束依赖分析分析
 * */
class ConstraintParameter
{
public:
	/*
	 * 目标约束的参数数量
	 * */
	static const int NUM_OF_PARAM = 3;
	/*
	 * 约束的名字信息
	 * */
	static string constraintName;

	/*
	 * 约束的Type信息
	 * */
	static bool constraintVarType[NUM_OF_PARAM];
	/*
	 * 约束变量名字信息
	 * */
	static string constraintVarName[NUM_OF_PARAM];

	/*
	 * 这个函数是用来获取约束的信息
	 * */
	static vector< vector<string> > getConstraintInfo()
	{
		vector< vector<string> > res;
		vector<string> one;
		one.push_back("x*x < 9");
		one.push_back("x*y < 0");
		res.push_back(one);

		vector<string> two;
		two.push_back(" y>=z ");
		res.push_back(two);

		return res;
	}

	vector< vector<ResultTest*> > getCoveredInfo(double* nums)
	{
		vector< vector<ResultTest*> > res;

		return res;
	}

	ResultTest* getConstraint00(double x,double y,double z)
	{
		double value = 9 - x*x;
		bool isCovered = (9 > x*x) ? true : false ;
		ResultTest* one = new ResultTest(value,isCovered);
		return one;
	}

	ResultTest* getConstraint01(double x,double y,double z)
	{
		double value = 0 - x*y;
		bool isCovered = (0 > x*y) ? true : false ;
		ResultTest* one = new ResultTest(value,isCovered);
		return one;
	}

	ResultTest* getConstraint10(double x,double y,double z)
	{
		double value = y - z;
		bool isCovered = (y > z) ? true : false ;
		ResultTest* one = new ResultTest(value,isCovered);
		return one;
	}

};

string ConstraintParameter::constraintName = "benchmark01";

bool ConstraintParameter::constraintVarType[NUM_OF_PARAM] = {1,1,1};
string ConstraintParameter::constraintVarName[NUM_OF_PARAM] = {"x","y","z"};

#endif /* CONSTRAINTPARAMETER_CUH_ */
