		res.NumOfBlcoks = (res.NumOfThreads )
			const int threadPreBlock=1000;
		    const int numOfBlocks=(SIZE+threadPreBlock-1)/threadPreBlock;
	}
};
#endif /* HARDWARESTRATEGY_CUH_ */
