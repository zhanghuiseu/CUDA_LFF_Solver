#ifndef SEARCHTASK_H_
#define SEARCHTASK_H_

#include <iostream>

#include "./../solver/SolverParameter.h"
#include "./../ConstraintParser/ConstraintParameter.cuh"

using namespace std;

class SearchTask
{
public:
	SearchTask();

	SearchTask(double init[ArraySize],double pri,int index,int change);


	/*
	 * 搜索变量的下标
	 * */
	int searchIndex;

	/*
	 * 输入数据的数组的长度
	 * */
	int ArraySize = ConstraintParameter::NUM_OF_PARAM;

	/*
	 * 出事的程序输入数据
	 * */
    double initInputs[ArraySize];

    /*
     * 当前任务的优先级
     * */
    double priority;

    /*
	 * 搜索变量下标已经更迭的次数
	 */
    int changeTime;

};

#endif /* SEARCHTASK_H_ */
